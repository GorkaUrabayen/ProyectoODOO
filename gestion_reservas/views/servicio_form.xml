<odoo>
    <data>

        <!-- Vista de formulario para el modelo 'res.service' -->
        <record id="view_servicio_form" model="ir.ui.view">
            <field name="name">servicio.form</field>
            <field name="model">res.service</field>
            <field name="arch" type="xml">
                <form string="Servicio">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="descripcion"/>
                            <field name="precio_servicio"/>
                            <field name="duracion"/>
                            <field name="disponible"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Guardar" type="object" name="create" class="btn-primary"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
