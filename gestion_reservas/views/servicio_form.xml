<odoo>
    <data>

        <!-- Vista de formulario para el modelo 'res.service' -->
        <record id="view_servicio_form" model="ir.ui.view">
            <field name="name">servicio.form</field>
            <field name="model">res.service</field>
            <field name="arch" type="xml">
                <form string="Servicio">
                    <sheet>
                        <group>
                            <field name="name" string="Nombre del Servicio" required="True"/>
                            <field name="descripcion" string="Descripción"/>
                            <field name="precio" string="Precio"/>
                            <field name="duracion" string="Duración (Horas)"/>
                            <field name="disponible" string="Disponible" widget="boolean_toggle"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Guardar" type="object" name="create" class="btn-primary"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
