<odoo>
  <data noupdate="0">

    <!-- ===================== VISTA LISTA PARA res.booking ===================== -->
    <record id="view_res_booking_list" model="ir.ui.view">
      <field name="name">res.booking.list</field>
      <field name="model">res.booking</field>
      <field name="arch" type="xml">
        <list string="Lista de Reservas">
          <field name="cliente_id" string="Cliente"/>
          <field name="fecha_hora" string="Fecha/Hora"/>
          <field name="estado" string="Estado"/>
          <field name="mazmorra_ids" string="Mazmorras" widget="many2many_tags"/>
          <field name="princesa_ids" string="Princesas" widget="many2many_tags"/>
          <field name="servicio_ids" string="Servicios" widget="many2many_tags"/>
          <field name="precio" string="Precio"/>

        </list>
      </field>
    </record>

    <!-- ===================== VISTA FORMULARIO PARA res.booking ===================== -->
    <record id="view_res_booking_form" model="ir.ui.view">
      <field name="name">res.booking.form</field>
      <field name="model">res.booking</field>
      <field name="arch" type="xml">
        <form string="Reserva">
          <sheet>
            <group>
              <field name="cliente_id"/>
              <field name="fecha_hora"/>
              <field name="estado"/>
              <field name="precio" readonly="1"/>
            </group>
            <group>
              <field name="mazmorra_ids"/>
              <field name="princesa_ids"/>
              <field name="servicio_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>
