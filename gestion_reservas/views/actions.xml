<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Acción para Clientes -->
    <record id="action_cliente" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Acción para Mazmorras -->
    <record id="action_mazmorra" model="ir.actions.act_window">
        <field name="name">Mazmorras</field>
        <field name="res_model">res.mazmorra</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Acción para Princesas -->
    <record id="action_princesa" model="ir.actions.act_window">
        <field name="name">Princesas</field>
        <field name="res_model">res.princesa</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Acción para Reservas -->
    <record id="action_reserva" model="ir.actions.act_window">
        <field name="name">Reservas</field>
        <field name="res_model">res.booking</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Acción para Servicios -->
    <record id="action_servicio" model="ir.actions.act_window">
        <field name="name">Servicios</field>
        <field name="res_model">res.service</field>
        <field name="view_mode">list,form</field>
    </record>
    <!-- Acción para vista Kanban de Reservas -->
    <record id="action_booking_kanban" model="ir.actions.act_window">
      <field name="name">Reservas Kanban</field>
      <field name="res_model">res.booking</field>
      <field name="view_mode">kanban,form</field>
      <field name="view_id" ref="view_booking_kanban"/>
    </record>

    <!-- Acción para vista Calendario de Reservas -->
    <record id="action_booking_calendar" model="ir.actions.act_window">
      <field name="name">Calendario de Reservas</field>
      <field name="res_model">res.booking</field>
      <field name="view_mode">calendar,form</field>
      <field name="view_id" ref="view_booking_calendar"/>
    </record>
</odoo>
