<odoo>
    <data>
        <!-- Vista de formulario para el modelo 'res.princesa' -->
        <record id="view_princesa_form" model="ir.ui.view">
            <field name="name">princesa.form</field>
            <field name="model">res.princesa</field>
            <field name="arch" type="xml">
                <form string="Princesa">
                    <sheet>
                        <group>
                            <div class="row">
                                <div class="col-md-6">
                                    <field name="name" class="oe_inline"/>
                                </div>
                                <div class="col-md-6">
                                    <field name="descripcion" class="oe_inline"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <field name="reserva_id"/>
                                </div>
                            </div>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Guardar" type="object" name="action_save" class="btn btn-success fa fa-save"/>
                        <button string="Cancelar" special="cancel" class="btn btn-secondary fa fa-times"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
