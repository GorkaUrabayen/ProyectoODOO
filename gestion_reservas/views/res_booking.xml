<odoo>
    <data>
        <!-- Vista de lista para el modelo 'res.booking' -->
        <record id="view_reserva_tree" model="ir.ui.view">
            <field name="name">reserva.tree</field>
            <field name="model">res.booking</field>
            <field name="arch" type="xml">
                <tree string="Reservas de Mazmorras">
                    <field name="cliente_id"/>
                    <field name="fecha_hora"/>
                    <field name="estado"/>
                    <field name="precio"/>
                </tree>
            </field>
        </record>

        <!-- Agregar la acción para visualizar las reservas -->
        <record id="action_reserva_list" model="ir.actions.act_window">
            <field name="name">Reservas</field>
            <field name="res_model">res.booking</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Aquí puedes gestionar las reservas de mazmorras y princesas.
                </p>
            </field>
        </record>

        <!-- Agregar una opción en el menú para acceder a las reservas -->
        <menuitem id="menu_reservas" name="Reservas" parent="menu_mazmorras" action="action_reserva_list"/>
    </data>
</odoo>
