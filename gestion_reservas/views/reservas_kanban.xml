<odoo>
  <data noupdate="0">
    <!-- VISTA KANBAN AGRUPADA POR ESTADO PARA res.booking -->
    <record id="view_booking_kanban" model="ir.ui.view">
      <field name="name">res.booking.kanban</field>
      <field name="model">res.booking</field>
      <field name="arch" type="xml">
        <kanban class="o_kanban_view" default_group_by="estado">
          <!-- Incluimos el campo estado para que se use en la agrupaciÃ³n -->
          <field name="estado"/>
          <templates>
            <t t-name="kanban-box">
              <div class="o_kanban_record">
                <div class="o_kanban_record_top">
                  <strong>
                    <field name="cliente_id"/>
                  </strong>
                </div>
                <div>
                  <span>Fecha: </span>
                  <field name="fecha_hora"/>
                </div>
                <div>
                  <span>Precio: </span>
                  <field name="precio"/>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
  </data>
</odoo>
