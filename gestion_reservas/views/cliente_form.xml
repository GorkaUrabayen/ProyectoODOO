<odoo>
    <data>

        <!-- Vista de formulario para el modelo 'res.partner' (Cliente) -->
        <record id="view_cliente_form" model="ir.ui.view">
            <field name="name">cliente.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Cliente">
                    <sheet>
                        <group>
                            <field name="name" string="Nombre" required="True"/>
                            <field name="esVip" string="Cliente VIP" widget="boolean_toggle" options="{'terminology': 'clear'}"/>
                            <field name="descuento_vip" string="Descuento VIP" readonly="True" 
                                   invisible="1" attrs="{'invisible': [('esVip', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="reservas" widget="one2many_list" string="Reservas del Cliente"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Guardar" type="object" name="create" class="btn-primary"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
