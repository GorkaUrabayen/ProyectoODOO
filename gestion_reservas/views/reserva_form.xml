<odoo>
    <data>

        <!-- Vista de formulario para el modelo 'res.booking' -->
        <record id="view_reserva_form" model="ir.ui.view">
            <field name="name">reserva.form</field>
            <field name="model">res.booking</field>
            <field name="arch" type="xml">
                <form string="Reserva de Mazmorra">
                    <sheet>
                        <group>
                            <field name="cliente_id" string="Cliente" required="True"/>
                            <field name="fecha_hora" string="Fecha y Hora"/>
                            <field name="estado" string="Estado"/>
                            <field name="precio" string="Precio" readonly="True"/>
                        </group>
                        <group>
                            <field name="mazmorra_ids" widget="one2many_list" string="Mazmorras Asociadas"/>
                            <field name="princesa_ids" widget="one2many_list" string="Princesas Asociadas"/>
                            <field name="servicio_ids" widget="many2many_tags" string="Servicios"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Confirmar Reserva" type="object" name="confirmar_reserva" class="btn-success"/>
                        <button string="Cancelar Reserva" type="object" name="cancelar_reserva" class="btn-danger"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
