<odoo>
    <record id="rule_reservas_clientes" model="ir.rule">
        <field name="name">Clientes solo pueden ver sus reservas</field>
        <field name="model_id" ref="model_res_booking"/>
        <!-- Aplicar regla a los registros-->
        <field name="global" eval="True"/>
        <!-- Los usuarios normales pueden ver sus reservas Ãºnicamente-->
        <field name="domain_force">[('cliente_id','=',user.partner_id.id)]</field>
        <!-- Grupos a los que se aplica, todos los usuarios normales-->
        <field name="groups" eval="[(4,ref('base.group_system')]"/>
    </record>
    <record id="rule_reservas_admin" model="ir.rule">
        <field name="name">Administradores pueden gestionar todas las reservas</field>
        <!-- Referncia a res.booking (reservas)-->
        <field name="model_id" ref="model_res_booking"/>
        <field name="global" eval="True"/>
        <!-- Los administradores pueden ver todas las reservas-->
        <field name="domain_force">[(1,'=',1)]</field>
        <!-- Aplicarlo a los administradores-->
        <field name="groups" eval="[(4,ref('base.group_system')]"></field>
    </record>
</odoo>